# File used to help view the generated site
# locally before pushing upstream. Based on
# information found here :
#
# https://help.github.com/articles/using-jekyll-with-pages/
#
# To install the necessary gubbins for the first time :
#
# > bundle install
#
# To update the necessary gubbins :
#
# > bundle update
#
# To generate the site and view it via a local server :
#
# > bundle exec jekyll serve --baseurl ""

source 'https://rubygems.org'
gem 'therubyracer'
gem 'github-pages'
gem 'jekyll-paginate'
